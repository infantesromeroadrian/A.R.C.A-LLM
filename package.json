{
  "name": "msmk-voice-assistant",
  "version": "1.0.0",
  "description": "MSMK University - AI Voice Assistant Frontend",
  "scripts": {
    "start": "http-server frontend -p 3000 -c-1",
    "dev": "http-server frontend -p 3000 -c-1 -o",
    "serve": "cd frontend && python3 -m http.server 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "voice-assistant",
    "ai",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/dom": "^9.3.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/frontend"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "setupFilesAfterEnv": ["<rootDir>/frontend/js/__tests__/setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    },
    "collectCoverageFrom": [
      "frontend/js/**/*.js",
      "!frontend/js/**/*.test.js",
      "!frontend/js/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 10000
  }
}

